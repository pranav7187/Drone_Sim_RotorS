<?xml version="1.0"?>
<robot name="payload" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:property name="PI" value="3.14159"/>
  <xacro:property name="effort" value="30"/>
  <xacro:property name="velocity" value="10"/>

  <!-- Define the grey material -->
  <material name="grey">
    <color rgba="0.5 0.5 0.5 1.0"/>
  </material>

  <!-- Base plate -->
  <link name="world_link"/>
  <joint name="dummy_joint" type="fixed">
    <parent link="world_link"/>
    <child link="base_plate"/>
  </joint>
  <link name="base_plate">
    <visual>
      <geometry>
        <box size="1 1 0.1"/>
      </geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <geometry>
        <box size="1 1 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
  </link>

  <!-- Define the four rods -->
  <xacro:macro name="rod" params="name x y">
    <link name="${name}">
      <visual>
        <geometry>
          <cylinder radius="0.02" length="0.5"/>
        </geometry>
        <origin xyz="0 0 0.25" rpy="0 0 0"/>
        <material name="grey"/>
      </visual>
      <collision>
        <geometry>
          <cylinder radius="0.02" length="0.5"/>
        </geometry>
        <origin xyz="0 0 0.25" rpy="0 0 0"/>
      </collision>
      <inertial>
        <mass value="0.1"/>
        <origin xyz="0 0 0.25" rpy="0 0 0"/>
        <inertia ixx="0.002" ixy="0.0" ixz="0.0" iyy="0.002" iyz="0.0" izz="0.001"/>
      </inertial>
    </link>
    <joint name="${name}_joint" type="fixed">
      <parent link="base_plate"/>
      <child link="${name}"/>
      <origin xyz="${x} ${y} 0" rpy="0 0 0"/>
    </joint>
  </xacro:macro>

  <xacro:rod name="rod1" x="0.5" y="0.5"/>
  <xacro:rod name="rod2" x="-0.5" y="0.5"/>
  <xacro:rod name="rod3" x="-0.5" y="-0.5"/>
  <xacro:rod name="rod4" x="0.5" y="-0.5"/>

  <!-- Quadrotor from RotorS package -->
  <xacro:include filename="$(find rotors_description)/urdf/mav_generic_odometry_sensor.gazebo"/>

  <xacro:generic_sensor_odom namespace="robot1" mav_name="firefly"/>
  <xacro:generic_sensor_odom namespace="robot2" mav_name="firefly"/>
  <xacro:generic_sensor_odom namespace="robot3" mav_name="firefly"/>
  <xacro:generic_sensor_odom namespace="robot4" mav_name="firefly"/>

  <!-- Floating joints for quadrotors -->

  <link name="dummy1">
    <visual>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.001"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
    </inertial>
  </link>
  <link name="dummy2">
    <visual>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.001"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
    </inertial>
  </link>
  <joint name="joint1_x" type="revolute">
    <parent link="rod1"/>
    <child link="dummy1"/>
    <origin xyz="0 0 0.5" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-${PI/2}" upper="${PI/2}" effort="${effort}" velocity="${velocity}"/>
  </joint>
  <joint name="joint1_y" type="revolute">
    <parent link="dummy1"/>
    <child link="dummy2"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-${PI/2}" upper="${PI/2}" effort="${effort}" velocity="${velocity}"/>
  </joint>
  <joint name="temp1" type="fixed">
    <parent link="dummy2"/>
    <child link="robot1/base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <link name="dummy3">
    <visual>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.001"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
    </inertial>
  </link>
  <link name="dummy4">
    <visual>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.001"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
    </inertial>
  </link>
  <joint name="joint2_x" type="revolute">
    <parent link="rod2"/>
    <child link="dummy3"/>
    <origin xyz="0 0 0.5" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-${PI/2}" upper="${PI/2}" effort="${effort}" velocity="${velocity}"/>
  </joint>
  <joint name="joint2_y" type="revolute">
    <parent link="dummy3"/>
    <child link="dummy4"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-${PI/2}" upper="${PI/2}" effort="${effort}" velocity="${velocity}"/>
  </joint>
  <joint name="temp2" type="fixed">
    <parent link="dummy4"/>
    <child link="robot2/base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <link name="dummy5">
    <visual>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.001"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
    </inertial>
  </link>
  <link name="dummy6">
    <visual>
      <geometry>
