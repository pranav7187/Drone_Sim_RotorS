  </link>
  <joint name="joint4_x" type="revolute">
    <parent link="rod4"/>
    <child link="dummy7"/>
    <origin xyz="0 0 0.5" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-${PI/2}" upper="${PI/2}" effort="${effort}" velocity="${velocity}"/>
  </joint>
  <joint name="joint4_y" type="revolute">
